{
  "name": "@mcp-nexus/server",
  "version": "0.1.3",
  "description": "MCP Nexus Server",
  "main": "dist/index.js",
  "scripts": {
    "build:ts": "tsc -p tsconfig.build.json",
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --format=esm && node -e \"require('fs').chmodSync('dist/index.js', '755')\"",
    "dev": "concurrently \"npx @modelcontextprotocol/inspector\" \"npm run dev:express\"",
    "dev:express": "tsx --watch --env-file .env src/index.ts",
    "start": "node --env-file .env dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "express": "^5.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@tsconfig/node22": "^22.0.1",
    "@types/express": "^5.0.1",
    "@types/node": "^20.17.30",
    "@vitest/coverage-v8": "^3.1.1",
    "@vitest/eslint-plugin": "^1.1.38",
    "concurrently": "^9.1.2",
    "esbuild": "^0.20.2",
    "eslint": "^9.23.0",
    "eslint-plugin-perfectionist": "^4.10.1",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.29.0",
    "vitest": "^3.1.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/almeynman/mcp-nexus.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "imports": {
    "#*": "./src/*"
  }
}
